{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "codeplan": {
      "npm": "@ai-sdk/anthropic",
      "name": "codeplan",
      "options": {
        "baseURL": "https://code-api.x-aio.com/anthropic/v1"
      },
      "models": {
        "DeepSeek-V3.2": {
          "name": "DeepSeek-V3.2"
        },
        "XAIO-C-4-5-Sonnet": {
          "name": "XAIO-C-4-5-Sonnet"
        }
      }
    },
    "yunyi": {
      "npm": "@ai-sdk/openai",
      "name": "yunyi",
      "options": {
        "baseURL": "https://yunyi.cfd/codex"
      },
      "models": {
        "gpt-5.1-codex-max": {
          "name": "gpt-5.1-codex-max"
        },
        "gpt-5.2": {
          "name": "gpt-5.2"
        },
      }
    },
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow",
    "doom_loop": "allow",
    "external_directory": "allow"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "figma-desktop": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    }
  },
  "keybinds": {
    // "command_list": "<leader>p",
  },
  "instructions": [
    "~/.config/opencode/output-styles/engineer-professional.md"
  ],
}
