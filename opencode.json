{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "codeplan": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "codeplan",
      "options": {
        "baseURL": "https://code-api.x-aio.com/v1"
      },
      "models": {
        "DeepSeek-V3.2": {
          "name": "DeepSeek-V3.2"
        },
        "XAIO-C-4-5-Opus": {
          "name": "XAIO-C-4-5-Opus"
        },
        "XAIO-C-4-5-Sonnet": {
          "name": "XAIO-C-4-5-Sonnet"
        },
        "GLM-4.7": {
          "name": "GLM-4.7"
        }
      }
    },
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow",
    "doom_loop": "allow",
    "external_directory": "allow"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "figma-desktop": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    }
  },
  "keybinds": {
    "command_list": "<leader>p",
  },
  "instructions": [
    "~/.config/opencode/output-styles/engineer-professional.md"
  ],
}
